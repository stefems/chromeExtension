{
	"manifest_version": 2,
	"name": "Extension Name",
	"version": "0.1",	
    "content_scripts": [
	    {
		    "matches": [
			    "<all_urls>"
			],
			"js": ["jquery-3.2.1.min.js", "content.js"]
		},
		{
		    "matches": [
			    "http://www.npr.org/*"
			],
			"js": ["jquery-3.2.1.min.js", "urlSpecificScript.js"]
		}

	],
	"browser_action": {
		"default_icon": "extensionIcon.png",
		"default_popup": "pop.html"
	},
	"background": {
	 	"scripts": ["background.js"]
	}
}
